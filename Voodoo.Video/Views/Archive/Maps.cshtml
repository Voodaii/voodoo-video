@using Microsoft.Extensions.Options
@using Voodoo.Video.Infrastructure.AppSettingsModels

@inject IOptions<ScriptTags> OptionsScriptTags

@{
    ViewData["Title"] = "Maps";
}

@* Get the Google Maps API key from the configuration object *@
<script src="https://maps.googleapis.com/maps/api/js?key=@OptionsScriptTags.Value?.GoogleMapsApiKey"></script>


<div class="row">
    <div class="col">
        <div class="border-0 card shadow">
            <div class="map-canvas" data-lat="40.748817" data-lng="-73.985428" id="map-canvas" style="height: 600px;"></div>
        </div>
    </div>
</div>